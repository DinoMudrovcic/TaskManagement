<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">


    <changeSet id="2022-02-18-001-task-assignee-link-column" author="dinomudrovcic">
        <addColumn tableName="task">
            <column name="assignee_id" type="NUMBER(19)" />
        </addColumn>

        <addForeignKeyConstraint constraintName="task_assignee_fk"
                                 baseTableName="task" baseColumnNames="assignee_id"
                                 referencedTableName="assignee" referencedColumnNames="id"/>

        <rollback>
            <dropColumn tableName="task" columnName="assignee_id" />
        </rollback>
    </changeSet>


</databaseChangeLog>